




<div class="container">
<div class="row">
<div class="darkbg col-sm-12">
<div class="row">
<div class="darkbg col-md-6 col-md-offset-3">

  <table>
    <tbody>
      <tr>

      <% b = session[:board]
         (1..9).each{  |pos|
        if (pos-1) %3 == 0
          %>
                </tr><tr><% end %>
            <td>
              <% if b[pos]=='X' %>

                  <img class="game_piece" src="/images/croix.png"/> 
              <% elsif b[pos] == 'O' %>
                  <img class="game_piece" src="/images/cercle.png"/>
              <% else %>
                  <form action="/players/<%= pos %>" method="post" >
                    <img class="tictac_img game_piece" src="/images/empty.png"/>
                  </form>
              <% end %>
            </td>



      <%  } %>

      </tr>


    </tbody>
  </table>

</div>
</div>
</div>
</div>
<% if @play_again %>
<p>
  <strong> Play again? </strong>
  <a href="/" class="btn btn-primary"> Yes </a>
  <a href="/game_over" class="btn btn-primary"> No </a>
</p>
<% end %>
</div>

<script>
    $(document).ready(function(){
       $(".tictac_img").on('click',function(){
           $(this).parent('form').submit();
       });

    });
</script>






