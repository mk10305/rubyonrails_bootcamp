
<!doctype html>
<html>
<head>
<title> BlackJack </title>
<link rel="stylesheet" href="/bootstrap.css">
<link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link rel="stylesheet" href="/application.css">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="/application.js"></script>

</head>
<body>
<header>
<nav class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <ul class="nav navbar-nav">
        <a class="navbar-brand" href="/new_player">BLACKJACK!</a>
        </ul>

        <% if @game_total %>
        <p class="navbar-text navbar-left">Total: $<%= session[:player_pot] %>  </p>
          <% end %>
          <% if @game_bet %>
        <p class="navbar-text navbar-left">Bet for Round: $<%= session[:player_bet] %> </p>
       <% end %>
   
  </div>
</nav>
</header>

<div class="container">
<div class="row">

<div class="col-md-8 col-md-offset-2">
<img class="img-responsive" src="/images/blackjack_font.png" alt="BlackJack">
</div>
</div>

 <div class="col-md-6 col-md-offset-3">
      <%if @error %>
        <div class="alert alert-warning"><%=@error%></div>
      <% end %>
      <%if @success%>
        <div class="alert alert-success"><%=@success%></div>
      <% end %>


  </div>


<%= yield %>





<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>

</html>